#!/bin/sh

nowdate=`date +%Y_%m_%d_%H_%M_%S`
logpath="/var/log/project_sperm"
logfile="${logpath}/log_${nowdate}_run.log"
mkdir -p $logpath
echo "${nowdate}" >> $logfile
cd `dirname "$(pwd)/${0}"`
python3 ./run.py ./config.json all start >> ${logfile} 2>&1 &
sleep 6h
nowdate=`date +%Y_%m_%d_%H_%M_%S`
echo "${nowdate}" >> $logfile
echo "reboot now" >> $logfile
reboot
